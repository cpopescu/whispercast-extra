<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res/com.happhub.android.publisher"
    
    android:id="@+id/session_fragment_cameras_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/generic_frame"
    android:padding="16dp" >

    <com.happhub.android.DrawableView
        android:id="@+id/thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/app_name"
        android:src="@drawable/no_thumbnail"
        app:src="@drawable/no_thumbnail"
        app:type="horizontal" />

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/thumbnail"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:includeFontPadding="false"
        android:padding="2dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>