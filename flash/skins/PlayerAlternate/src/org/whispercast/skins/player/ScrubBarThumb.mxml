<?xml version="1.0" encoding="utf-8"?>
<s:SparkButtonSkin xmlns:fx="http://ns.adobe.com/mxml/2009" 
             xmlns:s="library://ns.adobe.com/flex/spark" 
             xmlns:fb="http://ns.adobe.com/flashbuilder/2009">
     
    <fx:Metadata>
        <![CDATA[ 
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import flash.filters.BitmapFilterQuality;
		]]>
	</fx:Script>
	
    <!-- states -->
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
	
	<s:Ellipse width="100%" height="100%">
		<s:filters>
			<s:DropShadowFilter blurX="2" blurY="2" distance="0" quality="{BitmapFilterQuality.HIGH}"/>
		</s:filters>
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="{getStyle('foreColorHigh')}"/>
			</s:LinearGradient>
		</s:fill>
	</s:Ellipse>
	<s:Ellipse width="{width/2}" height="{height/2}" x="{width/4}" y="{height/4}">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="{getStyle('disabledColorLow')}" color.over="{getStyle('foreColorLow')}"  color.down="{getStyle('foreColorLow')}"/>
			</s:LinearGradient>
		</s:fill>
	</s:Ellipse>
</s:SparkButtonSkin>
