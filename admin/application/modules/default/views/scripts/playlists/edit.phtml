<tal:block phptal:tales="php">
<div id="default-playlists-edit-container">
  <div id="default-playlists-edit-form-dialog" style="position:absolute; visibility:hidden">
    <div class="hd" id="default-playlists-edit-form-dialog-title"></div>
    <div class="bd" id="default-playlists-edit-form-dialog-body">
      <tal:block tal:condition="model.form.getElement('name').setLabel(_('Name'))"/>
      <tal:block tal:condition="model.form.getElement('description').setLabel(_('Description'))"/>
      <tal:block tal:condition="model.form.getElement('tags').setLabel(_('Tags'))"/>
      <tal:block tal:condition="model.form.getElement('category_id').setLabel(_('Category'))"/>
      <tal:block tal:condition="model.form.getElement('public').setLabel(_('Public'))"/>
      <tal:block tal:condition="model.form.getElement('usable').setLabel(_('Can be used'))"/>
      <tal:block tal:condition="model.form.getElement('loop').setLabel(_('Loop'))"/>
      <tal:block tal:condition="model.form.removeElement('submit')"/>
      <tal:block tal:content="structure model.form.render()"/>
      <div id="default-playlists-edit-form-additional">
        <div>
          <hr/>
          <div class="label">Playlist:</div>
          <div id="default-playlists-edit-form-playlist"></div>
        </div>
        <div>
          <hr/>
          <div id="default-playlists-edit-form-playlist-selector"></div>
        </div>
      </div>
      <div id="default-playlists-edit-form-errors" class="error"></div>
    </div>
  </div>
</div>

<style type="text/css">
#default-playlists-edit-form-playlist {
  background-color: #ffffff;
  border: 1px solid #c0c0c0;
  height: 10.5em;
}
#default-playlists-edit-form-playlist .name {
  float: left;
  white-space: nowrap;
  overflow: hidden;
}
#default-playlists-edit-form-playlist .actions {
  float: right;
  margin: 0 0.25em 0 0;
}
</style>

<script type="text/javascript">
sandbox.server = ${structure json_encode(server)};
sandbox.record = ${structure json_encode(model.record)};
